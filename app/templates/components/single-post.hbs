{{yield}}
<div class="container">
  <div class="individualPostColumn">
    <div class="individualPostHeader">
      <h1>{{post.title}}</h1>
      <h3>{{post.date}}</h3>
      <h3>By {{post.author}}</h3>
      <span class="glyphicon glyphicon-trash" {{action 'delete' post}}></span>
      {{update-post post=post update="update"}}
      <hr>
      <h4 class="indivPostDescription">{{post.description}}</h4>
      <hr>
      <a href="{{post.image}}"><img src="{{post.image}}" class="img-responsive" max-width="500"></a>
      <hr>
    </div>
  <p>{{post.content}}</p>
  <hr>
    <h2 class="centerize">Comments</h2>
    <hr>
      {{#each post.comments as |comment|}}
        <h4>{{comment.title}}</h4>
          <p>{{comment.response}}</p>
          <span class="glyphicon glyphicon-trash" {{action 'deleteComment' comment}}></span>
        <hr>
      {{/each}}
      {{new-comment post=post saveComment="saveComment"}}
  </div>
</div>
