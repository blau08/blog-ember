{{yield}}
<div class="container">
  <div class="individualPostColumn">
    <div class="individualPostHeader">
      <h1>New Post</h1>
      <form class="form-group">
        <div class="form-group">
          {{input class="form-control" placeholder="Title" value=title id="title"}}
        </div>
        <div class="form-group">
          {{input class="form-control" placeholder="Date" value=date id="date"}}
        </div>
        <div class="form-group">
          {{input class="form-control" placeholder="Author(s)" value=author id="author"}}
        </div>
        <div class="form-group">
          {{input class="form-control" placeholder="Description" value=description id="description"}}
        </div>
        <div class="form-group">
          {{textarea rows="6" class="form-control" placeholder="Content" value=content id="content"}}
        </div>
        <div class="form-group">
          {{input class="form-control" placeholder="Image URL" value=image id="image"}}
        </div>
          <br>

        <button class="btn btn-success" {{action 'save'}}>Save</button>
      </form>
    </div>
  </div>
</div>
