{{yield}}
{{#if updatePostForm}}
<hr>
<form>
  <div class="form-group">
    <label for="title">Title</label>
    {{input class="form-control" value=title id="title" placeholder=post.title}}
  </div>

  <div class="form-group">
    <label for="date">Date</label>
    {{input class="form-control" value=date id="date" placeholder=post.date}}
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    {{input class="form-control" value=author id="author" placeholder=post.author}}
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    {{input class="form-control" value=description id="description" placeholder=post.description}}
  </div>

  <div class="form-group">
    <label for="content">Content</label>
    {{textarea class="form-control" value=content id="content" placeholder=post.content}}
  </div>

  <div class="form-group">
    <label for="image">Image</label>
    {{input class="form-control" value=image id="image" placeholder=post.image}}
  </div>

  <button {{action 'update' post}}>Save</button>
  <button {{action 'hidePostForm'}}>Cancel</button>
</form>
{{else}}
<span class="glyphicon glyphicon-pencil" {{action 'updatePostForm'}}></span>
{{/if}}
