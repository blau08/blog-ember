{{yield}}
<div class="individualPostHeader">
{{#if addNewComment}}
<h1>New Comment</h1>
  <form>
    <div class="form-group">
      {{input class="form-control" value=title id="title" placeholder="Title"}}
    </div>

    <div class="form-group">
      {{textarea class="form-control" value=response id="response" placeholder="Your comment"}}
    </div>

    <button {{action 'saveComment' post}}>Save</button>
  </form>
{{else}}
<button class="btn btn-info centerize" {{action 'showCommentForm'}}>New Comment</button>
{{/if}}
</div>
